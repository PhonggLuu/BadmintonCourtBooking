@page
@model BY.RazorWebApp.Pages.BookingPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Booking.Customer.Name" class="control-label"></label>
                <select asp-for="Booking.CustomerId" class="form-control" asp-items="Model.CustomerNames"></select>
            </div>

            <div class="form-group">
                <label asp-for="Booking.TotalPrice" class="control-label"></label>
                <input asp-for="Booking.TotalPrice" class="form-control" />
                <span asp-validation-for="Booking.TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.Status" class="control-label"></label>
                <input asp-for="Booking.Status" class="form-control" />
                <span asp-validation-for="Booking.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.StartDate" class="control-label"></label>
                <input asp-for="Booking.StartDate" class="form-control" />
                <span asp-validation-for="Booking.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.CreateDate" class="control-label"></label>
                <input asp-for="Booking.CreateDate" class="form-control" />
                <span asp-validation-for="Booking.CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.PaymentMethod" class="control-label"></label>
                <input asp-for="Booking.PaymentMethod" class="form-control" />
                <span asp-validation-for="Booking.PaymentMethod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.PaymentStatus" class="control-label"></label>
                <input asp-for="Booking.PaymentStatus" class="form-control" />
                <span asp-validation-for="Booking.PaymentStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

