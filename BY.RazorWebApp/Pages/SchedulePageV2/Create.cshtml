@page
@model BY.RazorWebApp.Pages.SchedulePageV2.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Schedule</h4>
<hr />
@if (string.IsNullOrEmpty(Model.Error) == false)
{
    <div class="alert alert-danger">
        @Model.Error
    </div>
}
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Schedule.CourtId" class="control-label">Court Name</label>
                <select asp-for="Schedule.CourtId" class ="form-control" asp-items="ViewBag.CourtId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.From" class="control-label"></label>
                <input asp-for="Schedule.From" type="time" class="form-control" />
                <span asp-validation-for="Schedule.From" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.To" class="control-label"></label>
                <input asp-for="Schedule.To" type="time" class="form-control" />
                <span asp-validation-for="Schedule.To" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.Price" class="control-label"></label>
                <input asp-for="Schedule.Price" class="form-control" />
                <span asp-validation-for="Schedule.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.Date" class="control-label"></label>
                <input asp-for="Schedule.Date" type="date" min="@DateTime.Now.Date.ToString("yyyy-MM-dd")" class="form-control" />
                <span asp-validation-for="Schedule.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.Event" class="control-label"></label>
                <input asp-for="Schedule.Event" type="text" class="form-control" />
                <span asp-validation-for="Schedule.Event" class="text-danger"></span>
              </div>
              <div class="form-group">
              <label asp-for="Schedule.Notes" class="control-label"></label>
              <textarea asp-for="Schedule.Notes" class="form-control"></textarea>
              <span asp-validation-for="Schedule.Date" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Schedule.StaffCheck" class="control-label"></label>
                <input asp-for="Schedule.StaffCheck" type="text" class="form-control" />
                <span asp-validation-for="Schedule.StaffCheck" class="text-danger"></span>
              </div>
            <div class="form-group">
                <label asp-for="Schedule.IsBooked" class="control-label"></label>
                <select asp-for="Schedule.IsBooked" class="form-control">
                    <option value="true" >True</option>
                    <option value="false">False</option>
                </select>
                <span asp-validation-for="Schedule.IsBooked" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
