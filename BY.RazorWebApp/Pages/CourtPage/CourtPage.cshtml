@page
@model BY.RazorWebApp.Pages.CourtPage.CourtPageModel

@{
    ViewData["Title"] = "Court";
    var courts = Model.courts;
}
<div class="text-center">
    <h1 class="display-6">Court management</h1>
</div>




<div class="row">
    <div class="col-md-12">
        <div class="mb-3">
            <div class="row">
                <div class="col-md-4">
                    <label for="searchInput" class="form-label">Search by Name:</label>
                    <input type="text" class="form-control" id="searchInput" placeholder="Search by Name...">
                </div>
                <div class="col-md-4">
                    <label for="addressSearchInput" class="form-label">Search by Address:</label>
                    <input type="text" class="form-control" id="addressSearchInput" placeholder="Search by Address...">
                </div>

                <div class="col-md-4 text-end">
                    <button type="button" class="btn btn-primary" onclick="add();">
                        Add
                    </button>
                </div>


            </div>
        </div>
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="card-header">
                    <th class="card-title text-center">ID</th>
                    <th class="card-title text-center">Name</th>
                    <th class="card-title text-center">Image</th>
                    <th class="card-title text-center">Description</th>
                    <th class="card-title text-center">Is In Use</th>
                    <th class="card-title text-center">Type</th>
                    <th class="card-title text-center">Color</th>
                    <th class="card-title text-center">Surface Type</th>
                    <th class="card-title text-center">Address</th>
                    <th class="card-title text-center">Action</th>
                </tr>
            </thead>
            <tbody class="tblcourtList">
                @if (courts.Count > 0)
                {
                    foreach (var court in courts)
                    {
                        <tr>
                            <td>@court.CourtId</td>
                            <td>@court.Name</td>
                            <td><img src="@court.Image" alt="Image" width="50"></td>
                            <td>@court.Description</td>
                            <td>@court.IsInUse</td>
                            <td>@court.Type</td>
                            <td>@court.Color</td>
                            <td>@court.SurfaceType</td>
                            <td>@court.Address</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a class="btn btn-info" asp-page="./CourtDetailPage" asp-route-id="@court.CourtId">Detail</a>
                                    <form method="post" asp-page-handler="Edit" asp-route-id="@court.CourtId" class="d-inline">
                                        <input type="hidden" id="editedCourtId" name="editedCourtId" />
                                        <button type="button" class="btn btn-warning" onclick="editCourt(@court.CourtId)">Update</button>
                                    </form>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@court.CourtId" class="d-inline">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function applyFilters() {
        var searchTerm = document.getElementById("searchInput").value.toLowerCase();
        var addressTerm = document.getElementById("addressSearchInput").value.toLowerCase();

        var tblCourtList = document.querySelector('.tblcourtList');
        var courtRows = tblCourtList.querySelectorAll('tr');

        courtRows.forEach(row => {
            var name = row.querySelector('td:nth-child(2)').textContent.toLowerCase();
            var address = row.querySelector('td:nth-child(9)').textContent.toLowerCase();

            var matchesSearchTerm = !searchTerm || name.includes(searchTerm);
            var matchesAddressTerm = !addressTerm || address.includes(addressTerm);

            if (matchesSearchTerm && matchesAddressTerm) {
                row.style.display = ''; // Show the row if it matches both filters
            } else {
                row.style.display = 'none'; // Hide the row if it doesn't match
            }
        });
    }

    // Add event listener for search inputs
    document.getElementById("searchInput").addEventListener("keyup", applyFilters);
    document.getElementById("addressSearchInput").addEventListener("keyup", applyFilters);
</script>


