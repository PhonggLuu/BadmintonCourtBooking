@page
@model BY.RazorWebApp.Pages.CustomerPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <form method="post">
        <div class="row">
            <div class="col-md-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Customer.Name" class="control-label"></label>
                            <input asp-for="Customer.Name" class="form-control" />
                            <span asp-validation-for="Customer.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Customer.Email" class="control-label"></label>
                            <input asp-for="Customer.Email" class="form-control" />
                            <span asp-validation-for="Customer.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Customer.Address" class="control-label"></label>
                            <input asp-for="Customer.Address" class="form-control" />
                            <span asp-validation-for="Customer.Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Customer.Phone" class="control-label"></label>
                            <input asp-for="Customer.Phone" class="form-control" />
                            <span asp-validation-for="Customer.Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Customer.NumberSlot" class="control-label"></label>
                            <input type="number" asp-for="Customer.NumberSlot" class="form-control" value="0"/>
                            <span asp-validation-for="Customer.NumberSlot" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Customer.Gender" class="control-label"></label>
                            <select asp-for="Customer.Gender" class="form-control">
                                <option value="true">Nam</option>
                                <option value="false">Nữ</option>
                            </select>
                            <span asp-validation-for="Customer.Gender" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Customer.YearOfBirth" class="control-label"></label>
                            <input type="date" asp-for="Customer.YearOfBirth" class="form-control" />
                            <span asp-validation-for="Customer.YearOfBirth" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Customer.RegisterDate" class="control-label"></label>
                            <input type="date" asp-for="Customer.RegisterDate" class="form-control" />
                            <span asp-validation-for="Customer.RegisterDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="form-check">
                                <label class="form-check-label" for="IsActive">
                                    IsActive
                                </label>
                                <input class="form-check-input" type="checkbox" asp-for="Customer.IsActive" id="IsActive">
                                <span asp-validation-for="Customer.IsActive" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group" style="float: right;">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
